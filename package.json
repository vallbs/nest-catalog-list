{
  "name": "nest-auth",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:migrate:prod": "prisma migrate deploy && npm run start:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "migrate:dev": "npx prisma migrate dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "docker:build": "dotenv -- cross-var docker build -t %APP_IMAGE_NAME% .",
    "docker:run": "dotenv -- cross-var docker run -p 3000:3000 --env-file .env -d %APP_IMAGE_NAME%",
    "docker:up-vanilla": "docker compose -f ./prisma/docker/postgres/docker-compose.yml up -d",
    "docker:down-vanilla": "docker compose -f ./prisma/docker/postgres/docker-compose.yml down",
    "docker:up": "docker-compose build && docker-compose up --force-recreate",
    "docker:up:db": "docker compose --env-file .env -f docker-compose.db.yml up -d",
    "docker:up:db:test": "docker compose --env-file .env.test -f docker-compose.db.yml up -d",
    "docker:down": "docker compose down",
    "db:restart": "npm run docker:down && npm run docker:up:db:test && sleep 1",
    "pre:test:e2e:old": "npm run db:restart && dotenv -e .env.test -- prisma migrate reset --force",
    "pre:test:e2e": "npm run db:restart && npm run migrate:test",
    "migrate:test": "dotenv -e .env.test -- prisma migrate reset --force",
    "test:e2e": "npm run pre:test:e2e && jest -i --no-cache --watch --config jest-e2e.json",
    "docker:up:db:test:new": "dotenv -e .env.test -- docker compose -f docker-compose.db.yml up -d"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.12.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "cross-var": "^1.1.0",
    "date-fns": "^3.6.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/date-fns": "^2.6.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.12.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
